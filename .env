# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/image-service

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production-67890

# File Storage Configuration
STORAGE_TYPE=local
# STORAGE_TYPE=s3

# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024 bytes

# AWS S3 Configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000 ms
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5000,http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
